{
  "name": "coderplex-app",
  "version": "1.0.0",
  "description": "We are on a mission to improve the state of tech in India",
  "main": "index.js",
  "scripts": {
    "test": "xo && jest",
    "lint": "prettier 'utils/**/*.js' 'components/**/*.js' 'pages/**/*.js' 'lib/**/*.js' 'hocs/**/*.js' '*.js' '*.json' --write && xo && markdownlint .",
    "precommit": "lint-staged",
    "analyze": "cross-env ANALYZE=1 next build",
    "dev": "cross-env NODE_ENV=development node server.js",
    "start": "cross-env NODE_ENV=production next start",
    "build": "next build",
    "export": "cross-env NODE_ENV=production yarn build && next export",
    "add-contributor": "all-contributors add",
    "generate-contributors": "all-contributors generate"
  },
  "xo": {
    "parser": "babel-eslint",
    "extends": [
      "prettier",
      "prettier/react",
      "plugin:react/recommended"
    ],
    "env": [
      "browser",
      "node"
    ],
    "rules": {
      "linebreak-style": 0,
      "react/display-name": 0,
      "react/prop-types": 0
    },
    "space:": 2,
    "ignores": [
      "next.config.js"
    ],
    "overrides": [
      {
        "files": "**/__tests__/*.test.js",
        "globals": [
          "describe",
          "it",
          "expect"
        ]
      }
    ]
  },
  "lint-staged": {
    "*.js": [
      "prettier --write --single-quote --print-width=120 --trailing-comma=es5 --jsx-bracket-same-line",
      "xo",
      "jest --findRelatedTests",
      "git add"
    ],
    "**/*.md": [
      "prettier",
      "markdownlint",
      "git add"
    ],
    ".github/CONTRIBUTING.md": [
      "doctoc",
      "prettier",
      "git add"
    ]
  },
  "dependencies": {
    "babel-plugin-emotion": "^8.0.10",
    "date-fns": "^1.29.0",
    "emotion": "^8.0.10",
    "emotion-server": "^8.0.10",
    "get-port": "^3.2.0",
    "grid-emotion": "^2.1.0",
    "isomorphic-unfetch": "2.0.0",
    "lodash.take": "^4.1.1",
    "marked": "^0.3.6",
    "next": "^4.2.3",
    "nprogress": "^0.2.0",
    "path-match": "1.2.4",
    "prop-types": "^15.5.10",
    "react": "^16.0.0",
    "react-content-loader": "^1.7.1",
    "react-dom": "^16.0.0",
    "react-emotion": "^9.0.0",
    "react-event-timeline": "^1.4.0",
    "react-headroom": "^2.1.6",
    "react-icons": "^2.2.5",
    "styled-system": "^1.0.8"
  },
  "devDependencies": {
    "all-contributors-cli": "4.10.1",
    "babel-eslint": "7.2.3",
    "babel-plugin-lodash": "3.3.2",
    "cross-env": "5.1.3",
    "doctoc": "1.3.0",
    "enzyme": "3.3.0",
    "enzyme-adapter-react-16": "1.1.1",
    "enzyme-to-json": "3.3.1",
    "eslint-config-prettier": "2.9.0",
    "eslint-plugin-react": "7.6.1",
    "husky": "0.14.3",
    "jest": "22.4.1",
    "lint-staged": "7.0.0",
    "markdownlint-cli": "0.7.1",
    "opn": "5.2.0",
    "prettier": "1.10.2",
    "raf": "3.4.0",
    "react-test-renderer": "16.2.0",
    "typescript": "2.7.1",
    "typescript-styled-plugin": "0.4.0",
    "webpack-bundle-analyzer": "2.10.0",
    "xo": "0.20.3"
  },
  "keywords": [],
  "contributors": [
    "Vinay Puppal <me@vinaypuppal.com> (https://www.vinaypuppal.com/)",
    "M-ZubairAhmed <ahmedzubari216@gmail.com> (https://github.com/M-ZubairAhmed)"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/coderplex/coderplex.git"
  },
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/coderplex/coderplex/issues"
  },
  "homepage": "https://coderplex.org"
}
