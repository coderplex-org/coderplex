    "cookie-parser": "^1.4.3",
    "express": "^4.15.3",
    "feathers": "^2.1.7",
    "feathers-authentication-client": "^0.3.3",
    "feathers-hooks": "^2.0.2",
    "feathers-rest": "^1.8.0",
    "isomorphic-unfetch": "^2.0.0",
    "js-cookie": "^2.1.4",
    "moment": "^2.19.1",
    "next": "2.4.7",
    "nprogress": "^0.2.0",
    "preact": "^8.2.1",
    "preact-compat": "^3.16.0",
    "prop-types": "^15.5.10",
    "react": "^15.6.1",
    "react-count-down": "^1.1.0",
    "react-dom": "^15.6.1",
    "react-ga": "^2.2.0",
    "react-headroom": "^2.1.6",
    "react-icons": "^2.2.5",
    "react-textgradient": "0.0.2",
    "semantic-ui-react": "^0.71.3"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "babel-plugin-lodash": "^3.2.11",
    "cross-env": "^5.0.2",
    "eslint-config-prettier": "^2.3.0",
    "eslint-plugin-react": "^7.1.0",
    "husky": "^0.14.3",
    "lint-staged": "^4.0.2",
    "nodemon": "^1.11.0",
    "prettier": "^1.7.0",
    "webpack-bundle-analyzer": "^2.8.3",
    "xo": "^0.18.2"
  }
